<Window x:Class="_344pr1.Stack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_344pr1"
        mc:Ignorable="d"
        Title="Работа StackPanel" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button Background="Blue" Content="1" Height="50"/>
            <Button Background="White" Content="2" Height="50"/>
            <Button Background="Red" Content="3" Height="50"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Background="Blue" Content="1" Width="100"/>
            <Button Background="White" Content="2" Width="100"/>
            <Button Background="Red" Content="3" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
