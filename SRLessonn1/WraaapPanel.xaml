            <Button Background="#FF13AC2F" Content="8" Margin="5"/>
            <Button Background="#FF1BB2B9" Content="9" Margin="5"/>
            <Button Background="#FF1869B9" Content="10" Margin="5"/>
        </WrapPanel>
    </Grid>
</Window>
